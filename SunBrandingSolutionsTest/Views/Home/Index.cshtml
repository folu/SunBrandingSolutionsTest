@{
    ViewData["Title"] = "Home Page";
}
@model SunBrandingSolutionsTest.Models.ApiAsset

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Welcome</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <input type="number" placeholder="Asset ID" min=0 name="assetInputId" />
            <button name="btn_submit">Submit</button>
        }
    </div>

    @if (@Model != null)
    {
        <div class="">
            <img src=@Model.Asset />
            @for (int i = 0; i < Model.Annotations.Count; i++)
            {
                
                    <li class="text-right">
                        <p><b>@Model.Annotations.ElementAt(i).Annotator</b></p>
                        <p>@Model.Annotations.ElementAt(i).Contents</p>
                    </li>
                
            }
        </div>
    }
    else
    {
        <p><b>Please provide a valid asset ID!</b></p>
    }
</body>
</html>
